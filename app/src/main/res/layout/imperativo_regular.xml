<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/subTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="regular affirmative verbs in -ar"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="presente do\nindicativo" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="(ele)fala" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="(eu)fal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="singular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tableHeaderText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="informal" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Fala!" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tableHeaderText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="formal" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Fale!" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="plural" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="formal and informal" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Falem!" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/subTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="regular affirmative verbs in -er and -ir"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="presente do\nindicativo" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="(ele)come\n        abre" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="(eu)com\n        abr" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="singular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tableHeaderText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="informal" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Come!\nAbre!" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tableHeaderText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="formal" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <TextView
                        style="@style/tableText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Coma!\nAbra!" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="plural" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="formal and informal" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView2"
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Comam!\nAbram!" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/subTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="negative"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="singular" />

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="plural" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="informal" />
            <TextView
                style="@style/tableHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="informal" />
            <TextView
                style="@style/tableHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="informal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="-ar" />
            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Não fales!" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Não fale!" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Não falem!" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tableHeaderText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="-er/-ir" />
            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Não comas!\nNão abras!" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Nãoo coma!\nNão abra!" />

            <TextView
                style="@style/tableText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Não comam!\nNão abram!" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>