<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <Spinner
        android:id="@+id/search_spinner"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/search_home_button"
        app:layout_constraintTop_toTopOf="parent"
        android:entries="@array/search_spinner"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:background="@drawable/header_shape_white"
        android:popupTheme="@style/spinner"/>

    <ImageButton
        android:id="@+id/search_home_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_home"
        android:background="@drawable/header_shape"
        android:foregroundGravity="center"/>

    <ListView
        android:id="@+id/main_search_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_spinner"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/selector"
        android:divider="@color/colorPrimary"
        android:dividerHeight="2dp"/>
</android.support.constraint.ConstraintLayout>